[flake8]
# Maximum line length - increased to accommodate longer lines
max-line-length = 120

# Ignore specific errors if needed
# E501: line too long (handled by max-line-length)
# W503: line break before binary operator (conflicts with Black formatter)
ignore = W503,C901

# Exclude directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info

# Maximum complexity for functions
max-complexity = 10

# Show source code for errors
show-source = True

# Count errors
statistics = True
